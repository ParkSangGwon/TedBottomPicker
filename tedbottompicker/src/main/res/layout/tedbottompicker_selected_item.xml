<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="@dimen/tedbottompicker_selected_image_height"
             android:layout_height="@dimen/tedbottompicker_selected_image_height"
             android:paddingBottom="16dp"
             android:paddingEnd="@dimen/tedbottompicker_grid_layout_margin"
             android:paddingLeft="@dimen/tedbottompicker_grid_layout_margin"
             android:paddingRight="@dimen/tedbottompicker_grid_layout_margin"
             app:paddingEnd="@dimen/tedbottompicker_grid_layout_margin">

    <ImageView
        android:id="@+id/selected_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="2dp"
        android:src="@drawable/ic_clear_white_24px"/>


</FrameLayout>

